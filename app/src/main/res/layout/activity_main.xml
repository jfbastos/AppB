<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/codigo_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Codigo : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/codigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="123"
        app:layout_constraintStart_toEndOf="@id/codigo_label"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/razao_social_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Razao Social : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/codigo"/>

    <TextView
        android:id="@+id/razao_social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="de Oliveira 4 "
        app:layout_constraintStart_toEndOf="@id/razao_social_label"
        app:layout_constraintBottom_toBottomOf="@id/razao_social_label"/>


    <TextView
        android:id="@+id/cpf_cnpj_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="CNPJ : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/razao_social_label"/>

    <TextView
        android:id="@+id/cpf_cnpj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="123456789/000-1"
        app:layout_constraintBottom_toBottomOf="@id/cpf_cnpj_label"
        app:layout_constraintStart_toEndOf="@id/cpf_cnpj_label"/>

    <CheckBox
        android:id="@+id/check_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarefa 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.120000005" />

    <ImageView
        android:id="@+id/img_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_check_24"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/check_1"
        app:layout_constraintTop_toTopOf="@id/check_1"
        app:layout_constraintBottom_toBottomOf="@id/check_1"/>

    <CheckBox
        android:id="@+id/check_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarefa 1"
        app:layout_constraintTop_toBottomOf="@id/check_1"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/img_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_check_24"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/check_2"
        app:layout_constraintTop_toTopOf="@id/check_2"
        app:layout_constraintBottom_toBottomOf="@id/check_2"/>

    <Button
        android:id="@+id/btn_fechar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Button"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>